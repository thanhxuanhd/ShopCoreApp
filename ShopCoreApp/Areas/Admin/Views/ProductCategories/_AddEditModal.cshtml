<div id="modalAddEdit" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h5 class="modal-title">Add product category</h5>
            </div>
            <div class="modal-body">
                <div id="horizontal-form">
                    <form class="form-horizontal" role="form" id="frmMaintainance">

                        <div class="form-group">
                            <input type="hidden" id="hidIdM" value="0" />
                            <label for="txtNameProductCategory" class="col-sm-2 control-label no-padding-right">
                                Name
                                <span class="required">*</span>
                            </label>
                            <div class="col-sm-10">
                                <input type="text" name="txtNameProductCategory" class="form-control" id="txtNameProductCategory" placeholder="Name of category">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 col-xs-12 control-label no-padding-right">Parent</label>
                            <div class="col-sm-10 col-xs-12">
                                <input id="ddlCategoryIdProductCategory" class="form-control" name="ddlCategoryIdProductCategory" value="" style="width:100%">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="txtSeoAliasProductCategory" class="col-sm-2 col-xs-12 control-label no-padding-right">Alias</label>
                            <div class="col-sm-10 col-xs-12">
                                <input type="text" name="txtSeoAliasProductCategory" class="form-control" id="txtSeoAliasProductCategory">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="txtDescriptionProductCategory" class="col-sm-2 col-xs-12 control-label no-padding-right">Description</label>
                            <div class="col-sm-10 col-xs-12">
                                <textarea rows="3" name="txtDescriptionProductCategory" class="form-control" id="txtDescriptionProductCategory"></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="txtOrderProductCategory" class="col-sm-2 col-xs-12 control-label no-padding-right">
                                Sort Order
                                <span class="required">*</span>
                            </label>
                            <div class="col-sm-10 col-xs-12">
                                <input type="number" name="txtOrderProductCategory" class="form-control" id="txtOrderProductCategory" min="0">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="txtHomeOrderProductCategory" class="col-sm-2 col-xs-12 control-label no-padding-right">
                                Home Order
                                <span class="required">*</span>
                            </label>
                            <div class="col-sm-10 col-xs-12">
                                <input type="number" name="txtHomeOrderProductCategory" class="form-control" id="txtHomeOrderProductCategory" min="0">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="txtImageProductCategory" class="col-sm-2 col-xs-12control-label no-padding-right">Images</label>
                            <div class="col-sm-10 col-xs-12">
                                <div class="input-group">
                                    <input type="text" name="txtImage" class="form-control" id="txtImageProductCategory" />
                                    <input type="file" id="fileInputImage" style="display:none" />
                                    <span class="input-group-btn">
                                        <input type="button" id="btnSelectImgProductCategory" class="btn btn-default" value="Browser" />
                                    </span>
                                </div>
                            </div>

                        </div>
                        <div class="form-group">
                            <label for="txtSeoPageTitleProductCategory" class="col-sm-2 col-xs-12 control-label no-padding-right">SEO Title</label>
                            <div class="col-sm-10 col-xs-12">
                                <input type="text" name="txtSeoPageTitleProductCategory" class="form-control" id="txtSeoPageTitleProductCategory">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="txtSeoAliasProductCategory" class="col-sm-2 col-xs-12 control-label no-padding-right">URL SEO</label>
                            <div class="col-sm-10 col-xs-12">
                                <input type="text" name="txtSeoAliasProductCategory" class="form-control" id="txtSeoAliasProductCategory">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="txtSeoKeywordsProductCategory" class="col-sm-2 col-xs-12 control-label no-padding-right">SEO Keyword</label>
                            <div class="col-sm-10 col-xs-12">
                                <input type="text" name="txtSeoKeywordsProductCategory" class="form-control" id="txtSeoKeywordsProductCategory">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="txtSeoDescriptionProductCategory" class="col-sm-2 col-xs-12 control-label no-padding-right">SEO Description</label>
                            <div class="col-sm-10 col-xs-12">
                                <textarea rows="3" name="txtSeoDescriptionProductCategory" class="form-control" id="txtSeoDescriptionProductCategory"></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10 col-xs-12">
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" checked="checked" id="ckStatusProductCategory">
                                        <span class="text">Active.</span>
                                    </label>
                                    <label>
                                        <input type="checkbox" id="ckShowHomeProductCategory">
                                        <span class="text">Show on home.</span>
                                    </label>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="btnSave" class="btn btn-primary">Save changes</button>
                <button type="button" id="btnCancel" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>